    <script language="javascript">
        alert ("Hola ADSO nocturno");
        var nom;
        nom= prompt("Cuál es tu nombre");
        alert ("Hola " +nom+" Que bonito nombre");
        alert ("Escriba dos números para realizar las 4 operaciones basicas ");
        var n1;
        var n2;
        n1= prompt("Escriba el primer número: ")
        n2= prompt("Escriba el segundo número: ");
        multi=n1*n2;
        alert ("El resultado de la multiplicación de " +n2+ " X " +n1+ " es " +multi );
        suma= parseInt(n1) + parseInt(n2);
        alert ("La suma de los dos números es: " + suma);
        resta= parseInt(n1) - parseInt(n2);
        alert ("La resta de los dos números es: " + resta);
        divi = parseInt(n1) / parseInt(n2);
        alert("La divión de los dos números es: " +divi);

    </script>
